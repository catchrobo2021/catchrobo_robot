<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Constants -->
  <xacro:property name="visual_mesh_scale" value="1.0 1.0 1.0"/>
  <xacro:property name="collision_mesh_scale" value="1.0 1.0 1.0"/>

  <!-- Link & Joint -->
  <xacro:macro name="gripper" params="prefix parent *joint_origin">

    <joint name="${prefix}gripper/root" type="fixed">
      <xacro:insert_block name="joint_origin" />
      <parent link="${parent}" />
      <child link="${prefix}gripper/base_link" />
    </joint>
    
    <link name="${prefix}gripper/base_link">
      <visual>
        <geometry>
          <mesh filename="package://catarm_description/mesh/gripper/base_link.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="green"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catarm_description/mesh/gripper/base_link.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}gripper/joint1" type="prismatic">
      <parent link="${prefix}gripper/base_link"/>
      <child link="${prefix}gripper/finger1"/>
      <origin xyz="0 -0.05 0.01" rpy="${90*M_PI/180} 0 ${180*M_PI/180}"/>
      <axis xyz="0 0 1"/>
      <limit lower="0" upper="0.05" effort="6"
              velocity="5" acceleration="5"/>
    </joint>

    <link name="${prefix}gripper/finger1">
      <visual>
        <geometry>
          <mesh filename="package://catarm_description/mesh/gripper/finger1.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="green"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catarm_description/mesh/gripper/finger1.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}gripper/joint2" type="prismatic">
      <parent link="${prefix}gripper/base_link"/>
      <child link="${prefix}gripper/finger2"/>
      <origin xyz="0 0.05 0.01" rpy="${90*M_PI/180} 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="0" upper="0.05" effort="6"
              velocity="5" acceleration="5"/>
      <mimic joint="${prefix}gripper/joint1" multiplier="1" offset="0" />
    </joint>

    <link name="${prefix}gripper/finger2">
      <visual>
        <geometry>
          <mesh filename="package://catarm_description/mesh/gripper/finger2.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="green"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catarm_description/mesh/gripper/finger2.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}gripper/joint_tip" type="fixed">
      <parent link="${prefix}gripper/base_link"/>
      <child link="${prefix}gripper/link_tip"/>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
    </joint>
    <link name="${prefix}gripper/link_tip"/>
  
  </xacro:macro>
</robot>