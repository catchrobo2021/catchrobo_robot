<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Constants -->
  <xacro:property name="visual_mesh_scale" value="1.0 1.0 1.0"/>
  <xacro:property name="collision_mesh_scale" value="1.0 1.0 1.0"/>

  <!-- Link & Joint -->
  <xacro:macro name="arm" params="prefix parent *joint_origin">

    <joint name="${prefix}arm/root" type="fixed">
      <xacro:insert_block name="joint_origin" />
      <parent link="${parent}" />
      <child link="${prefix}arm/link0" />
    </joint>
    
    <link name="${prefix}arm/link0">
      <visual>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link0.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link0.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}arm/joint1" type="revolute">
      <parent link="${prefix}arm/link0"/>
      <child link="${prefix}arm/link1"/>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-90*M_PI/180}" upper="${90*M_PI/180}" effort="6"
              velocity="5" acceleration="5"/>
    </joint>  

    <link name="${prefix}arm/link1">
      <visual>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link1.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link1.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}arm/joint2" type="revolute">
      <parent link="${prefix}arm/link1"/>
      <child link="${prefix}arm/link2"/>
      <origin xyz="0 0 0.08" rpy="${90*M_PI/180} 0 ${90*M_PI/180}"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-90*M_PI/180}" upper="${90*M_PI/180}" effort="6"
              velocity="5" acceleration="5"/>
    </joint>

    <link name="${prefix}arm/link2">
      <visual>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link2.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link2.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}arm/joint3" type="revolute">
      <parent link="${prefix}arm/link2"/>
      <child link="${prefix}arm/link3"/>
      <origin xyz="0 0.4 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-135*M_PI/180}" upper="${135*M_PI/180}" effort="6"
              velocity="5" acceleration="5"/>
    </joint>

    <link name="${prefix}arm/link3">
      <visual>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link3.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link3.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}arm/joint4" type="revolute">
      <parent link="${prefix}arm/link3"/>
      <child link="${prefix}arm/link4"/>
      <origin xyz="0 0.4 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-90*M_PI/180}" upper="${90*M_PI/180}" effort="6"
              velocity="5" acceleration="5"/>
    </joint>

    <link name="${prefix}arm/link4">
      <visual>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link4.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link4.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}arm/joint5" type="revolute">
      <parent link="${prefix}arm/link4"/>
      <child link="${prefix}arm/link5"/>
      <origin xyz="0 0.04 0" rpy="${-90*M_PI/180} 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="${-180*M_PI/180}" upper="${180*M_PI/180}" effort="6"
              velocity="5" acceleration="5"/>
    </joint>

    <link name="${prefix}arm/link5">
      <visual>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link5.stl" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catarm_description/mesh/arm/link5.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}arm/joint_tip" type="fixed">
      <parent link="${prefix}arm/link5"/>
      <child link="${prefix}arm/link_tip"/>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
    </joint>
    <link name="${prefix}arm/link_tip"/>
  
  </xacro:macro>
</robot>