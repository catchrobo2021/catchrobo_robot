<launch>
<!-- arguments -->
<arg name="model" default="$(find catarm_description)/robots/catarm.urdf.xacro"/>
<arg name="gui" default="True" />
<arg name="field" default="" /> 
<!-- prameters -->
<param name="robot_description" command="$(find xacro)/xacro field:=$(arg field) --inorder $(arg model)"/>
<param name="use_gui" value="$(arg gui)"/>
<!-- nodes -->
<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher" />
<!-- rviz -->
<node name="rviz" pkg="rviz" type="rviz" args="-d $(find catarm_description)/config/catarm_display.rviz" required="true"/>
    <param name="field" value="$(arg field)"/>
</launch>
